<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pharmacy_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f9fc"
        tools:context="com.example.ast.teleafya.Ui.Pharmacy_Ui.Pharmacy_HomeActivity">

        <RelativeLayout
            android:id="@+id/update_post_header"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@mipmap/profile_bg">

            <ImageView
                android:id="@+id/back_image"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:background="@mipmap/phome_menu" />

            <ImageView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="35dp"
                android:id="@+id/diagnostic_user_image"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/timeline" />

            <TextView
                android:id="@+id/diagnostic_user_name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="Welcome Mayank Gupta"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/diagnostic_user_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="12sp"
                android:textColor="#fff"
                android:text="Diagnostic Dashboard"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/diagnostic_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:background="@mipmap/notification" />

        </RelativeLayout>
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f9fc"
            android:fillViewport="true"
            android:layout_below="@+id/update_post_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f9fc">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/patient"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:background="@mipmap/my_patients" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RIDE REQUEST"
                                    android:textColor="#346da3"
                                    android:textSize="12sp"
                                    android:layout_marginTop="10dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. "
                                    android:textColor="#bab9b9"
                                    android:textSize="10sp" />

                            </LinearLayout>


                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/appointment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:background="@mipmap/my_appointments" />

                                <TextView
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:text="COMPLETED RIDE"
                                    android:textColor="#346da3"
                                    android:textSize="12sp"
                                    android:layout_marginTop="10dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. "
                                    android:textColor="#bab9b9"
                                    android:textSize="10sp" />

                            </LinearLayout>


                        </android.support.v7.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:id="@+id/test_lab"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:background="@mipmap/lab_tests" />

                                    <TextView
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="MESSAGES"
                                        android:textColor="#346da3"
                                        android:textSize="12sp"
                                        android:layout_marginTop="10dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. "
                                        android:textColor="#bab9b9"
                                        android:textSize="10sp" />

                                </LinearLayout>


                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:id="@+id/test_result"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:background="@mipmap/test_result" />

                                    <TextView
                                        android:id="@+id/textView2"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="CALLS"
                                        android:layout_marginTop="10dp"
                                        android:textColor="#346da3"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. "
                                        android:textColor="#bab9b9"
                                        android:textSize="10sp" />

                                </LinearLayout>


                            </android.support.v7.widget.CardView>


                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:id="@+id/message"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:background="@mipmap/my_messages" />

                                    <TextView
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="MESSAGE"
                                        android:textColor="#346da3"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. "
                                        android:textColor="#bab9b9"
                                        android:textSize="10sp" />

                                </LinearLayout>


                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:id="@+id/emergency"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:background="@mipmap/my_emergency" />

                                    <TextView
                                        android:id="@+id/textView"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="EMERGENCY"
                                        android:textColor="#346da3"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. "
                                        android:textColor="#bab9b9"
                                        android:textSize="10sp" />

                                </LinearLayout>


                            </android.support.v7.widget.CardView>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"></LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>



        <LinearLayout
            android:id="@+id/menu_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#fff"
            android:paddingTop="15dp"
            android:weightSum="5">


            <LinearLayout
                android:id="@+id/home_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp">


                <ImageView
                    android:id="@+id/home_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/app_home" />

                <TextView
                    android:id="@+id/home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="HOME"
                    android:textColor="#346da3"
                    android:textSize="10sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/patient_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"

                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/provider_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/patients_view" />

                <TextView
                    android:id="@+id/top_text"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="RIDE REQUEST"
                    android:textSize="10sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/appointment_view"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/notification_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/appoitments" />

                <TextView
                    android:id="@+id/notification_text"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="MESSAGES"
                    android:textSize="10sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/create_test_view"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/create_test" />

                <TextView
                    android:id="@+id/profile_text"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="CALLS"
                    android:textSize="10sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/setting_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/phome_profile" />

                <TextView
                    android:id="@+id/setting_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="PROFILE"
                    android:textSize="10sp" />


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#1987f1"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />



</android.support.v4.widget.DrawerLayout>