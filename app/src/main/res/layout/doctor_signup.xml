<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:padding="12dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:backgroundTint="#1987f1"
                        android:background="@drawable/dr_img"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />
                    <ImageView
                        android:layout_centerInParent="true"
                        android:background="@mipmap/camera"
                        android:layout_width="25dp"
                        android:layout_height="20dp" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#346da3"
                    android:textSize="12sp"
                    android:text="Upload Photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:textSize="8dp"
                    android:layout_marginTop="5dp"
                    android:text="Image size should be between \n100Kb to 300Kb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrey"/>




            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="1"
                    android:textColorHint="#346da3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:drawablePadding="10dp"
                        android:paddingBottom="15dp"
                        android:drawableLeft="@mipmap/user"
                        android:textSize="12sp"
                        android:textColor="#346da3"
                        android:id="@+id/Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:textColorHint="#346da3"
                        android:imeOptions="actionUnspecified"
                        android:inputType="text"
                        android:maxLines="1"/>
                    <!--android:background="@drawable/edit_text_border_doc_signup"/>-->

                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_edges_lblue"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"></View>

                </RelativeLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:textColorHint="#346da3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:paddingBottom="21dp"
                        android:textSize="12sp"
                        android:textColor="#346da3"
                        android:paddingLeft="10dp"
                        android:id="@+id/lname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Last Name"
                        android:textColorHint="#346da3"
                        android:imeOptions="actionUnspecified"
                        android:inputType="text"
                        android:maxLines="1" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_weight="1"
                android:textColorHint="#346da3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:drawablePadding="10dp"
                    android:paddingBottom="15dp"
                    android:textSize="12sp"
                    android:textColor="#346da3"
                    android:drawableLeft="@mipmap/calendar"
                    android:id="@+id/date_of_bith"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date of Birth"
                    android:textColorHint="#346da3"
                    android:imeOptions="actionUnspecified"
                    android:inputType="text"
                    android:maxLines="1"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_weight="1"
                android:textColorHint="#346da3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:drawablePadding="10dp"
                    android:textSize="12sp"
                    android:paddingBottom="15dp"
                    android:textColor="#346da3"
                    android:id="@+id/country"
                    android:focusable="false"
                    android:drawableLeft="@mipmap/country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Country"
                    android:textColorHint="#346da3"
                    android:imeOptions="actionUnspecified"
                    android:inputType="text"
                    android:maxLines="1" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_weight="1"
                android:textColorHint="#346da3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:drawablePadding="10dp"
                    android:textSize="12sp"
                    android:paddingBottom="15dp"
                    android:textColor="#346da3"
                    android:drawableLeft="@mipmap/email"
                    android:id="@+id/Email_or_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email or Mobile"
                    android:textColorHint="#346da3"
                    android:imeOptions="actionUnspecified"
                    android:inputType="text"
                    android:maxLines="1" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_weight="1"
                android:textColorHint="#346da3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:drawablePadding="10dp"
                    android:textSize="12sp"
                    android:paddingBottom="15dp"
                    android:textColor="#346da3"
                    android:id="@+id/password"
                    android:drawableLeft="@mipmap/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:textColorHint="#346da3"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_weight="1"
                android:textColorHint="#346da3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:drawablePadding="10dp"
                    android:textSize="12sp"
                    android:paddingBottom="15dp"
                    android:textColor="#346da3"
                    android:id="@+id/c_password"
                    android:drawableLeft="@mipmap/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:textColorHint="#346da3"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1" />

            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/app_male"
                        android:layout_marginRight="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#346da3"
                        android:layout_marginRight="25dp"
                        android:text="Male"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/app_female"
                        android:layout_marginLeft="25dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:text="Female"
                        android:layout_marginLeft="25dp"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Account Info"
                        android:layout_marginTop="5dp"
                        android:textColor="#346da3"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" (You can add later)"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorGrey"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <ImageView
                            android:id="@+id/add_method"
                            android:src="@mipmap/plus_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"/>



                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="20dp"
                    android:id="@+id/Reltive1"
                    android:visibility="gone"
                    android:background="@color/colorWhite">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/chase_bank"
                        android:id="@+id/bankImage"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/sort"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentRight="true"
                        />


                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CHASE BANK"
                        android:layout_marginTop="15dp"
                        android:id="@+id/BankName"
                        android:layout_below="@id/bankImage"
                        android:textColor="@color/colorText"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Natraj studio, Azad Nagar, Andheri East, Mumabi,"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:id="@+id/BankAdd"
                        android:gravity="center"
                        android:layout_below="@id/BankName"
                        />


                    <TextView
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Maharashat 40047"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1dp"
                        android:id="@+id/BankAdd2"
                        android:layout_below="@id/BankAdd"
                        />


                    <ImageView
                        android:id="@+id/Activeimg"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/BankAdd2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:background="@mipmap/active_sel_" />

                    <!--<View android:layout_width="match_parent"-->
                    <!--android:background="#000	"-->
                    <!--android:id="@+id/View1"-->
                    <!--android:layout_below="@id/BankAdd2"-->
                    <!--android:layout_marginTop="65dp"-->
                    <!--android:layout_height="1dp" />-->







                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/BankAdd2"
                        android:layout_marginTop="80dp"
                        android:paddingTop="10dp"
                        android:weightSum="3"
                        android:paddingBottom="10dp"
                        android:id="@+id/tabl1"
                        android:layout_centerHorizontal="true"
                        >





                        <LinearLayout
                            android:weightSum="3"
                            android:id="@+id/table1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:gravity="center"

                                android:id="@+id/text1"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Account Holder"
                                android:textSize="12dp"

                                />



                            <TextView
                                android:id="@+id/text2"
                                android:gravity="center"

                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Account Number"

                                android:textSize="12dp"


                                />



                            <TextView
                                android:id="@+id/text3"

                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"

                                android:text="Unique Code"
                                android:textSize="12dp"


                                />



                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/table2"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:textStyle="bold"
                                android:gravity="center"
                                android:id="@+id/text4"
                                android:layout_column="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Arvind Patel"
                                android:layout_weight="1"
                                android:textColor="@color/colorText"
                                android:layout_gravity="center"
                                android:textSize="12dp"

                                />



                            <TextView
                                android:gravity="center"

                                android:textStyle="bold"
                                android:id="@+id/text5"
                                android:layout_column="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="84758693125"
                                android:layout_weight="1"
                                android:textColor="@color/colorText"
                                android:layout_gravity="center"
                                android:textSize="12dp"


                                />



                            <TextView
                                android:textStyle="bold"
                                android:gravity="center"

                                android:id="@+id/text6"
                                android:layout_column="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="458793"
                                android:layout_weight="1"
                                android:textColor="@color/colorText"
                                android:textSize="12dp"


                                />



                        </LinearLayout>

                        <!--<View android:layout_width="match_parent"-->
                        <!--android:background="#C0C0C0	"-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:layout_height="1dp"  />-->


                        <LinearLayout
                            android:weightSum="3"
                            android:id="@+id/table3"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:id="@+id/text7"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Swift Code"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:textSize="12dp"

                                />



                            <TextView
                                android:id="@+id/text8"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="IFSC Code"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:textSize="12dp"


                                />



                            <TextView
                                android:id="@+id/text9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="Branch"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="12dp"


                                />



                        </LinearLayout>


                        <LinearLayout
                            android:weightSum="3"
                            android:id="@+id/table4"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:textStyle="bold"
                                android:gravity="center"
                                android:id="@+id/text10"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Arvind Patel"
                                android:textColor="@color/colorText"
                                android:textSize="12dp"

                                />



                            <TextView
                                android:textStyle="bold"

                                android:id="@+id/text11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CHE452361"
                                android:layout_weight="1"
                                android:textColor="@color/colorText"
                                android:gravity="center"
                                android:textSize="12dp"


                                />



                            <TextView
                                android:textStyle="bold"

                                android:id="@+id/text12"
                                android:layout_column="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="Chakala Andheri"
                                android:textColor="@color/colorText"
                                android:textSize="12dp"


                                />



                        </LinearLayout>




                    </TableLayout>






                </RelativeLayout>



            </LinearLayout>
            <Button
                android:layout_marginTop="25dp"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:text="SignUp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_edges"
                android:layout_width="match_parent"
                android:layout_height="38dp" />



        </LinearLayout>



    </LinearLayout>
</ScrollView>