                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$35.000" />


                                <TextView
                                    android:textStyle="bold"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/colorText"
                                    android:textSize="17sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$10.000" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingRight="20dp"
                            android:layout_marginRight="25dp"
                            android:orientation="horizontal"
                            android:gravity="right">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/minus_icon" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:textColor="@color/colorText"
                                android:text="1"
                                />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/plus_icon"
                                />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingBottom="20dp"
                android:background="@color/colorWhite"
                android:layout_below="@id/scr">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtotal"
                    android:id="@+id/sub"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_marginLeft="30dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipping Charge"
                    android:id="@+id/sub2"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/sub"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_marginLeft="30dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$220"
                    android:id="@+id/Price"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorText"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentEnd="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$30"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/Price"
                    android:id="@+id/Price2"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorText"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentEnd="true"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/view1"
                    android:background="@color/colorGrey"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/sub2"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:id="@+id/sub3"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/view1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_marginLeft="30dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$250"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/Price2"
                    android:id="@+id/Price3"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorText"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentEnd="true"
                    />



                <Button
                    android:layout_width="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sub3"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:id="@+id/CartBtn"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:background="#58a7f2"
                    android:text="Checkout"
                    android:textColor="@color/colorWhite"
                    android:drawableRight="@mipmap/next_arrow_white"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:drawablePadding="10dp"
                    />









            </RelativeLayout>





        </LinearLayout>



    </ScrollView>





</RelativeLayout>