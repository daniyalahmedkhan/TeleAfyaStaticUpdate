<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:background="#fff"
    android:layout_height="match_parent">



    <LinearLayout
        android:background="#fff"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/user_msg_pimage"
        android:background="@mipmap/gonzalo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#346da3"
            android:text="Gonzalo Leyendecker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">
        <TextView
            android:textSize="10sp"
            android:textColor="#346da3"
            android:text="10:20:00 AM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textSize="12sp"
                android:text="Hello How are you feeling now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/msg_count"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="#fff"
                android:background="@drawable/circle_blue"
                android:text="20"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            </LinearLayout>


        </LinearLayout>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>