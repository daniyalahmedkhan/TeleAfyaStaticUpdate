<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout1"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/profile_bg"
                android:paddingBottom="50dp">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >


                    <ImageView
                        android:id="@+id/nav_icon"
                        android:layout_marginTop="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/back"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        />





                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/shivank_sharma"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/center_image"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:id="@+id/center_text1"
                        android:layout_centerHorizontal="true"
                        android:text="Shivank Sharma"
                        android:textColor="@color/colorWhite"
                        android:layout_below="@id/center_image"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/center_text2"
                        android:text="Age: 50 Weight: 70kg Height: 5.10 BMI 18.5"
                        android:textColor="@color/colorWhite"
                        android:layout_below="@id/center_text1"

                        />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"

                        android:layout_below="@id/center_text2"
                        android:layout_marginTop="20dp">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="12dp"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:src="@mipmap/call_white"
                                />

                            <View
                                android:layout_width="1dp"
                                android:layout_marginRight="20dp"
                                android:layout_height="wrap_content"
                                android:background="@color/colorGrey"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"

                                android:src="@mipmap/video_call"
                                />

                            <View
                                android:layout_width="1dp"
                                android:layout_marginRight="20dp"
                                android:layout_height="wrap_content"
                                android:background="@color/colorGrey"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"

                                android:src="@mipmap/chat"
                                />

                            <View
                                android:layout_width="1dp"
                                android:layout_marginRight="20dp"
                                android:layout_height="wrap_content"
                                android:background="@color/colorGrey"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/mail"
                                />




                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>



            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_below="@id/toolbar_outside"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabMode="fixed"
        app:tabIndicatorColor="#1987f1"
        app:tabIndicatorHeight="1dp"

        app:tabGravity="fill"
        app:tabSelectedTextColor="#346da3"
        app:tabTextColor="#7391a2"

        />
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_cont"

        />
</LinearLayout>