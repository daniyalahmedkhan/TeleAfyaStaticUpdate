<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header_view"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:backgroundTint="#1987f1"
                android:background="@drawable/dr_img"
                android:layout_width="70dp"
                android:layout_height="70dp" />
                <ImageView
                    android:layout_centerInParent="true"
                    android:background="@mipmap/camera"
                    android:layout_width="25dp"
                    android:layout_height="20dp" />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#1987f1"
                android:textSize="12sp"
                android:text="Upload Photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textSize="8dp"
                android:layout_marginTop="5dp"
                android:text="Image size should be between \n 100Kb to 300Kb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/header_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:textColorHint="#346da3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableLeft="@mipmap/user"
                android:drawablePadding="10dp"
                android:hint="Name"
                android:imeActionId="@+id/login"
                android:imeOptions="actionUnspecified"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#346da3"
                android:textColorHint="#346da3"
                android:textSize="12sp" />

        </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:textColorHint="#346da3">

                <EditText
                    android:id="@+id/lname"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="Last Name"
                    android:imeActionId="@+id/login"
                    android:imeOptions="actionUnspecified"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="#346da3"
                    android:textColorHint="#346da3"
                    android:textSize="12sp" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:textColorHint="#346da3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableLeft="@mipmap/gender"
                android:drawablePadding="10dp"
                android:hint="Gender"
                android:imeActionId="@+id/login"
                android:imeOptions="actionUnspecified"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#346da3"
                android:textColorHint="#346da3"
                android:textSize="12sp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:textColorHint="#346da3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/date_of_bith"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableLeft="@mipmap/calendar"
                android:drawablePadding="10dp"
                android:hint="Date of Birth"
                android:imeActionId="@+id/login"
                android:imeOptions="actionUnspecified"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#346da3"
                android:textColorHint="#346da3"
                android:textSize="12sp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:textColorHint="#346da3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableLeft="@mipmap/country"
                android:drawablePadding="10dp"
                android:hint="Country"
                android:imeActionId="@+id/login"
                android:imeOptions="actionUnspecified"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#346da3"
                android:textColorHint="#346da3"
                android:textSize="12sp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:textColorHint="#346da3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/Email_or_mobile"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableLeft="@mipmap/email"
                android:drawablePadding="10dp"
                android:hint="Email or Mobile"
                android:imeActionId="@+id/login"
                android:imeOptions="actionUnspecified"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#346da3"
                android:textColorHint="#346da3"
                android:textSize="12sp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:textColorHint="#346da3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableLeft="@mipmap/password"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:imeActionId="@+id/login"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#346da3"
                android:textColorHint="#346da3"
                android:textSize="12sp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:textColorHint="#346da3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/c_password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableLeft="@mipmap/password"
                android:drawablePadding="10dp"
                android:hint="Confirm Password"
                android:imeActionId="@+id/login"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#346da3"
                android:textColorHint="#346da3"
                android:textSize="12sp" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:text="SignUp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_edges_blue"
            android:layout_width="match_parent"
            android:layout_height="38dp" />



    </LinearLayout>

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </RelativeLayout>


</RelativeLayout>
    </ScrollView>